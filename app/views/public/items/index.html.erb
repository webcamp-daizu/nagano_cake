<div class="row">

  <div class="col-sm-10 col-md-3 ">
    <%= render "public/searches/genre_sidebar", genres: @genres %>
  </div>

  <div class="col-sm-10 col-md-8 ml-3">
    <div class="row">
      <h3>商品一覧</h3>
      <div>（全<%= @items.total_count %>件）</div>
      
      <% @items.each do |item| %>
        <div>
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, :fill, 200, 150 %>
          <% end %>
        </div>
        <div><%= item.name %></div>
        <div>¥<%= item.add_tax_included_price.to_s(:delimited) %></div>
      <% end %>
    </div>
    
    <div class="text-center">  
      <%= paginate @items %>
    </div>
  </div>