<div class="row">

  <div class="col-md-3 mr-5">
    <%= render "public/searches/genre_sidebar", genres: @genres %>
  </div>

  <div class="col-md-8 ">

    <h3>商品一覧</h3>
    <div>（全<%= @items.total_count %>件）</div>

    <div class="card-list-container pt-3 row">
      <% @items.each do |item| %>
        <div class="card mx-auto mt-4 shadow-lg">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, :fill, 200, 150 ,class:"card-img-top py-2 px-2";%>
          <% end %>
          <div class="card-body">
            <div class="card-title"><%= item.name %></div>
            <div>¥<%= item.add_tax_included_price.to_s(:delimited) %></div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="text-center">
      <%= paginate @items %>
    </div>
    
  </div>
  
</div>

