<h1>配送先登録/一覧</h1>

<!--新規入力-->
<%= form_with model: @address ,local: true do |f| %>
  <div class="form-group">
    <%= f.label :post_code,"郵便番号（ハイフンなし）"%>
    <%= f.text_field :post_code %>
  </div>
  <div>
    <%= f.label :address,"住所" %>
    <%= f.text_area :address %>
  </div>
  <div>
    <%= f.label :name,"宛名"%>
    <%= f.text_field :name %>
  </div>
  <%= f.submit "新規登録" %>
<%end%>

<!--一覧-->
<table class="table table-white">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.post_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する" ,edit_shipping_address_path(address.id) %>
          <%= link_to "削除する" ,shipping_address_path(address.id) ,method: :delete %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>