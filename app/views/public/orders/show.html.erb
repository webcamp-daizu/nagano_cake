<h1>注文履歴詳細</h1>
<h2>注文情報</h2>
<table>
  <tbody>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>〒<%= @order.post_code %><br><%= @order.address %><br><%= @order.name %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.order_status_i18n %></td>
    </tr>
  </tbody>
</table>
<h2>注文内容</h2>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.tax_included_price.to_s(:delimited) %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.subtotal.to_s(:delimited) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>請求情報</h2>
<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= @order.order_items_total_price.to_s(:delimited) %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.shipping_fee.to_s(:delimited) %></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @order.total_price.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>