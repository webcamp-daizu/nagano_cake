<h3 class="ml-5">注文履歴詳細</h3>

<div class="row">
  <div class="col-md-6 pt-3">
    <p class="font-weight-bold">注文情報</p>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="table-active">注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th class="table-active">配送先</th>
          <td>〒<%= @order.post_code %><br><%= @order.address %><br><%= @order.name %></td>
        </tr>
        <tr>
          <th class="table-active">支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th class="table-active">ステータス</th>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-md-4 pt-3">
    <p class="font-weight-bold">請求情報</p>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="table-active">商品合計</th>
          <td><%= @order.order_items_total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-active">配送料</th>
          <td><%= @order.shipping_fee.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-active">ご請求額</th>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-8 pt-3">
    <p class="font-weight-bold">注文内容</p>
    <table class="table table-bordered">
      <thead>
        <tr class="table-active">
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.tax_included_price.to_s(:delimited) %></td>
            <td><%= order_item.quantity %></td>
            <td><%= order_item.sum_of_price.to_s(:delimited) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
