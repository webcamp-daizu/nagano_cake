<h3 class="offset-2 col-3 mt-5 text-center bg-light">管理者ログイン</h3>

<div class="col-8 offset-2 mt-5">
<%= form_with model:@admin, url: admin_session_path, local: true do |f| %>
  <div class="form-group row">
    <div class="col-4"><%= f.label :email,"メールアドレス"%></div>
    <div class="col-8"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></div>
  </div>

  <div class="form-group row">
    <div class="col-4"><%= f.label :password,"パスワード"%></div>
    <div class="col-8"><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></div>
  </div>

  <div class="text-center mt-5">
    <%= f.submit "ログイン", class: "btn btn-primary", style: "width:150px" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

</div>
