<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order) do %>
            <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
          <% end %>
        </td>
        <td><%= order.customer.full_name.gsub(" ", "") %></td>
        <td><%= order.order_items_total_quantity %></td>
        <td><%= order.order_status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>