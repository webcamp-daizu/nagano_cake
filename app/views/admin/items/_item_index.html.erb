<div class="row offset-1 mt-3">
  <table class="table">
    <thead class="table-active">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <tr>
          <td><%= item.id%></td>
          <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark", style: "text-decoration: underline" %></td>
          <td><%= item.tax_encluded_price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <% if item.is_active? %>
            <td class="text-success"><strong>販売中</strong></td>
          <% else %>
            <td class="text-secondary"><strong>販売停止中</strong></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="offset-5">
    <%= paginate items %>
  </div>
</div>
