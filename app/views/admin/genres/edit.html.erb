<h3 class="offset-1 mt-4">　ジャンル編集　</h3>

<div class="col-8 mt-5">
  <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
    <div class="form-group row">
      <div class="col-2"><%= f.label :ジャンル名 %></div>
      <div class="col-4"><%= f.text_field :name %></div>
      <div class="col-3"><%= f.submit "変更を保存", class: "btn btn-success", style: "width:150px" %></div>
    </div>
  <% end %>
</div>