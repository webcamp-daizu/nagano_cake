<h3 class="offset-1 col-4 mt-4 text-center bg-light">ジャンル一覧・追加</h3>

<div class="col-8 mt-5">
  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <div class="form-inline">
      <div><%= f.label :ジャンル名 %></div>
      <div class="ml-5"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
      <div class="ml-5"><%= f.submit "新規登録", class: "btn btn-success", style: "width:150px" %></div>
    </div>
  <% end %>
</div>

<div class="row mt-5">
  <div class="col-5">
    <table class="table">
      <thead class="table-active text-center">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>