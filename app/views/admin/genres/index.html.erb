<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :ジャンル名 %>
    <%= f.text_field :name, placeholder: "ジャンル名" %>
  </div>

  <div class="form-group">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
      </tr>
    <% end %>
  </tbody>
</table>