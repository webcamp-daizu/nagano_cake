<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <%=link_to "NaganoCake",root_path ,class:"navbar-brand text-light"%>

          <!--naviボタン-->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <!--ボタンの中に隠す要素 任意のidを指定する-->
          <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav ml-auto">

              <% if admin_signed_in? %>
                <li>
                  <%= link_to admin_items_path, class:"nav-link text-light" do%>
                    <i class="fas fa-users"></i><span>商品一覧</span>
                  <%end%>
                </li>
                <li>
                  <%= link_to admin_customers_path ,class:"nav-link " do %>
                    <i class="fas fa-home" ></i><span>会員一覧</span>
                  <%end%>
                </li>
                <li>
                  <%= link_to admin_root_path,class:"nav-link text-light" do%>
                    <i class="fas fa-book-open"></i><span>注文履歴一覧</span>
                  <%end%>
                </li>
                <li>
                  <%= link_to admin_genres_path ,class:"nav-link " do %>
                    <i class="fas fa-home" ></i><span>ジャンル一覧</span>
                  <%end%>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete ,class:"nav-link text-light" do%>
                    <i class="fas fa-sign-out-alt"></i><span>ログアウト</span>
                  <%end%>
                </li>

              <% else %>

                <li>
                  <%= link_to about_path ,class:"nav-link text-light" do %>
                    <i class="fas fa-home" ></i><span>About</span>
                  <%end%>
                </li>
                <li>
                  <%= link_to items_path ,class:"nav-link text-light" do%>
                    <i class="fas fa-link"></i><span>商品一覧</span>
                  <%end%>
                </li>
                <li>
                  <%= link_to new_customer_registration_path ,class:"nav-link text-light" do%>
                    <i class="fas fa-user-plus"></i><span>新規登録</span>
                  <%end%>
                </li>
                <li>
                  <%= link_to new_customer_session_path ,class:"nav-link text-light" do%>
                    <i class="fas fa-sign-in-alt"></i><span>ログイン</span>
                    <%end%>
                </li>

              <% end %>
            </ul>
            
          </div>
        </div>
      </nav>
      
    </header>
    
    <main>
      <%= yield %>
    </main>
    
    <footer>
    </footer>
    
  </body>
</html>
